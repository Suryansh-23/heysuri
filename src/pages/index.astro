    <Introduction />
    <hr
      class="border-muted-text dark:border-dark-muted-text mt-12 border-[0.5px] opacity-10 dark:opacity-15"
    />
    <section class="py-3">
      <div class="border-muted-text/10 mt-3 overflow-hidden rounded-md border">
        <div class="relative w-full bg-black pt-[56.25%]">
          <iframe
            class="absolute inset-0 h-full w-full"
