---
import { getCollection } from "astro:content";
import ExternalLink from "@/components/ExternalLink.astro";

const projects = await getCollection("projects");
---

<section class="py-3">
  <h2 class="text-muted-text dark:text-dark-muted-text mb-3 text-lg font-bold">
    Projects
  </h2>
  <div class="grid list-none gap-4 p-0">
    {
      projects.map((project) => (
        <div>
          <ExternalLink href={project.data.href} newTab>
            {project.data.title}
          </ExternalLink>
          <p class="prose m-0 text-sm opacity-90">{project.data.description}</p>
        </div>
      ))
    }
  </div>

  <h2
    class="text-muted-text dark:text-dark-muted-text mt-6 mb-3 text-lg font-bold"
  >
    Toolbox
  </h2>
  <div class="grid gap-4 sm:grid-cols-2">
    <div class="prose">
      <h3 class="m-0 text-base">Languages</h3>
      <p class="m-0 text-sm opacity-90">JS/TS, Solidity, Go, Rust, Python</p>
    </div>
    <div class="prose">
      <h3 class="m-0 text-base">Frontend</h3>
      <p class="m-0 text-sm opacity-90">React, Next.js, Tailwind CSS</p>
    </div>
    <div class="prose">
      <h3 class="m-0 text-base">Smart contracts & Web3</h3>
      <p class="m-0 text-sm opacity-90">Viem, Ethers, Chainlink, EigenLayer</p>
    </div>
    <div class="prose">
      <h3 class="m-0 text-base">Data & infra</h3>
      <p class="m-0 text-sm opacity-90">TheGraph/Substreams, RabbitMQ</p>
    </div>
  </div>
</section>
