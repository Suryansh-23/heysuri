---
import { SITE, SOCIAL_LINKS } from "@/siteConfig.ts";

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE.title, description = SITE.description } = Astro.props;

const canonicalUrl = Astro.url;
const pathName =
  canonicalUrl.pathname === "/"
    ? "index"
    : canonicalUrl.pathname.replace(/^\/|\/$/g, "");
const ogImage = new URL(`og/${pathName}.png/`, Astro.site);
const ogImageAlt = title;
const ogWidth = 1200;
const ogHeight = 630;
const ogLocale = SITE.locale.replace(/-/g, "_");
const facebookAppId =
  import.meta.env.FB_APP_ID ?? import.meta.env.PUBLIC_FB_APP_ID ?? null;
const twitterHandle = (() => {
  const twitterUrl = SOCIAL_LINKS.twitter?.href;
  if (!twitterUrl) return null;
  try {
    const url = new URL(twitterUrl);
    const handle = url.pathname.split("/").filter(Boolean)[0];
    return handle ? `@${handle}` : null;
  } catch {
    return null;
  }
})();
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:url" content={ogImage} />
<meta property="og:image:secure_url" content={ogImage} />
<meta property="og:image:alt" content={ogImageAlt} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content={`${ogWidth}`} />
<meta property="og:image:height" content={`${ogHeight}`} />
<meta property="og:type" content="website" />
<meta property="og:locale" content={ogLocale} />
{facebookAppId && <meta property="fb:app_id" content={facebookAppId} />}

<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:image:alt" content={ogImageAlt} />
<meta name="twitter:card" content="summary_large_image" />
{twitterHandle && <meta name="twitter:site" content={twitterHandle} />}
{twitterHandle && <meta name="twitter:creator" content={twitterHandle} />}
