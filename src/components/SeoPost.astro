---
import { type CollectionEntry } from "astro:content";
import { SITE, SOCIAL_LINKS } from "@/siteConfig";

const { entry } = Astro.props;
const post = entry as CollectionEntry<"notes">;

const postTitle = post.data.title || SITE.title;
const postDescription = post.data.description || SITE.description;
const canonicalUrl = Astro.url;
const ogImage = new URL(`og/notes/${post.id}.png/`, Astro.site);
const ogWidth = 1200;
const ogHeight = 630;
const ogLocale = SITE.locale.replace(/-/g, "_");
const facebookAppId =
  import.meta.env.FB_APP_ID ?? import.meta.env.PUBLIC_FB_APP_ID ?? null;
const authorProfile = SOCIAL_LINKS.twitter?.href ?? SITE.href;
const twitterHandle = (() => {
  const twitterUrl = SOCIAL_LINKS.twitter?.href;
  if (!twitterUrl) return null;
  try {
    const url = new URL(twitterUrl);
    const handle = url.pathname.split("/").filter(Boolean)[0];
    return handle ? `@${handle}` : null;
  } catch {
    return null;
  }
})();
const publishedTime = post.data.publicationDate.toISOString();
---

<title>{`${postTitle} | ${SITE.title}`}</title>
<meta name="title" content={`${postTitle} | ${SITE.title}`} />
<meta name="description" content={postDescription} />
<link rel="canonical" href={canonicalUrl} />

<meta property="og:title" content={postTitle} />
<meta property="og:description" content={postDescription} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:url" content={ogImage} />
<meta property="og:image:secure_url" content={ogImage} />
<meta property="og:image:alt" content={postTitle} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content={`${ogWidth}`} />
<meta property="og:image:height" content={`${ogHeight}`} />
<meta property="og:type" content="article" />
<meta property="og:locale" content={ogLocale} />
{facebookAppId && <meta property="fb:app_id" content={facebookAppId} />}
<meta property="article:published_time" content={publishedTime} />
<meta property="article:author" content={authorProfile} />

<meta name="twitter:title" content={postTitle} />
<meta name="twitter:description" content={postDescription} />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:image:alt" content={postTitle} />
<meta name="twitter:card" content="summary_large_image" />
{twitterHandle && <meta name="twitter:site" content={twitterHandle} />}
{twitterHandle && <meta name="twitter:creator" content={twitterHandle} />}

{
  post?.data.tags &&
    post.data.tags.map((tag: string) => {
      return <meta property="article:tag" content={tag} />;
    })
}
